# vim: set ft=sxhkdrc:
#
# bspwm hotkeys
#

# Change keyboard language
super + space
  {setxkbmap se, setxkbmap us}

# Launcher
super + Tab
  launcher

# Reload startup screen
super + alt + r
  ~/.config/bspwm/startup

# Lock screen
super + l
  dm-tool lock

# Logout
super + alt + l
  pkill chromium ; sudo service lightdm restart

# Shutdown
ctrl + super + alt + l
  pkill chromium ; shutdown now

# Focus termite
ctrl + grave
  focus termite ; bspc desktop -l next

# Cycle desktops
alt + ctrl + {Right,Down,Left,Up}
  bspc desktop -f {next,next,prev,prev}.local

# Cycle nodes
shift + alt + {Right,Down,Left,Up}
  bspc node -f {next,next,prev,prev}.local

# Kill node
ctrl + q
  bspc node -k

# Balance tree
alt + b
  bspc desktop -B

# Toggle monocle
alt + space
  bspc desktop -l next

# Toggle pseudotiled (floating in tile)
alt + shift + space
  bspc window -t pseudo_tiled

# Change window gap
alt + {minus,equal}
  bspc config -d focused window_gap $((`bspc config -d focused window_gap` {+,-} 2 ))

# Set splitting ratio of windows
alt + ctrl + {1-9}
  bspc window -r 0.{1-9}

# Focus or move window to desktops
alt + {_,shift + }{1-9,0}
    bspc {desktop -f, window -d} $(bspc query -M -m)/{i,ii,iii,iv,v,vi,vii,viii,ix,x}

#
# mouse bindings
#

# Move or resize window
alt + button{1-3}
  bspc pointer -g {move,resize_side,resize_corner}

# Needed for ^^^^
alt + !button{1-3}
    bspc pointer -t %i %i


super + @button{1-3}
    bspc pointer -u

#
# spawn programs
#

alt + shift + backslash
  create_frame

alt + shift + Return
  termite -e tmux

alt + ctrl + Return
   bspc rule -a termite -o pseudo_tiled=on && termite

alt + r
  $HOME/scripts/lens

alt + shift + r
  $HOME/scripts/dmenu/spotlight

super + b
  chromium-browser

super + s
  slack

super + f
  nautilus

Print
  scrot -q 100

#
# Media keys
#

XF86AudioRaiseVolume
  $HOME/.config/bspwm/panel/notify_volume + 3

XF86AudioLowerVolume
  $HOME/.config/bspwm/panel/notify_volume - 3

XF86AudioMute
  $HOME/.config/bspwm/panel/notify_volume !

XF86Sleep
  pm-suspend

XF86AudioPlay
  $HOME/.config/bspwm/panel/notify_mpd -t

XF86AudioNext
  $HOME/.config/bspwm/panel/notify_mpd -n

XF86AudioPrev
  $HOME/.config/bspwm/panel/notify_mpd -p

XF86WebCam
  sed -i 's/card [0-9]/card {0,1}/' $HOME/.asoundrc

#
# Dzen applets
#
alt + F1
  $HOME/.xmonad/sc $HOME/.xmonad/scripts/dzen_music.sh
alt + F2
  $HOME/.xmonad/sc $HOME/.xmonad/scripts/dzen_network.sh
alt + F3
  $HOME/.xmonad/sc $HOME/.xmonad/scripts/dzen_battery.sh
alt + F4
  $HOME/.xmonad/sc $HOME/.xmonad/scripts/dzen_hardware.sh
alt + F5
  $HOME/.xmonad/sc $HOME/.xmonad/scripts/dzen_date.sh
alt + F6
  $HOME/.xmonad/sc $HOME/.xmonad/scripts/dzen_log.sh

# make sxhkd reload its configuration files:
alt + shift + Escape
  pkill -USR1 -x sxhkd
