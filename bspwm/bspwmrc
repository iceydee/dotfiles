#! /bin/sh

sxhkd &

if [ -z "$(cat ~/.computer-config | grep "desktop")" ]; then
  bspc monitor -d I II III IV V VI
else
  bspc monitor DVI-D-0 -n 1 -d I III V
  bspc monitor HDMI-0 -n 2 -d II IV VI
fi

bspc config border_width         2
bspc config window_gap          12

bspc config split_ratio          0.50
bspc config borderless_monocle   true
bspc config gapless_monocle      true
bspc config click_to_focus       true

if [ -z "$(cat ~/.computer-config | grep "vm")" ]; then
  compton --config "${HOME}/.config/compton/compton.conf" -b
fi
hsetroot -fill ~/Pictures/Wallpapers/green_hills_forest.jpg
numlockx on &

dropbox start

~/.config/bspwm/startup &
